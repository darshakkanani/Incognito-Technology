{
  "name": "incognito-technology",
  "version": "1.0.0",
  "description": "Full-stack startup platform integrating AI, Blockchain, Cybersecurity, and SaaS",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/fastapi-service",
    "backend/nodejs-service",
    "blockchain",
    "ai-ml"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:blockchain\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/nodejs-service && npm run dev",
    "dev:blockchain": "cd blockchain && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend/nodejs-service && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend/nodejs-service && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend/nodejs-service && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f devops/kubernetes/",
    "security:scan": "npm audit && cd frontend && npm audit",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend/nodejs-service && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "healthcare",
    "blockchain",
    "ai",
    "cybersecurity",
    "saas",
    "hipaa",
    "gdpr",
    "federated-learning"
  ],
  "author": "Incognito Technology Team",
  "license": "MIT"
}
