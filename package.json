{
  "name": "incognito-technology",
  "version": "1.0.0",
  "description": "Full-stack startup platform integrating AI, Blockchain, Cybersecurity, and SaaS",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/node_services/auth-service",
    "backend/node_services/notification-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:auth\" \"npm run dev:notifications\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:auth": "cd backend/node_services/auth-service && npm run dev",
    "dev:notifications": "cd backend/node_services/notification-service && npm run dev",
    "build": "npm run build:frontend && npm run build:auth && npm run build:notifications",
    "build:frontend": "cd frontend && npm run build",
    "build:auth": "cd backend/node_services/auth-service && npm run build",
    "build:notifications": "cd backend/node_services/notification-service && npm run build",
    "test": "npm run test:frontend && npm run test:auth && npm run test:notifications",
    "test:frontend": "cd frontend && npm run test",
    "test:auth": "cd backend/node_services/auth-service && npm run test",
    "test:notifications": "cd backend/node_services/notification-service && npm run test",
    "lint": "npm run lint:frontend && npm run lint:auth && npm run lint:notifications",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:auth": "cd backend/node_services/auth-service && npm run lint",
    "lint:notifications": "cd backend/node_services/notification-service && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run setup:frontend && npm run setup:auth && npm run setup:notifications",
    "setup:frontend": "cd frontend && npm install",
    "setup:auth": "cd backend/node_services/auth-service && npm install",
    "setup:notifications": "cd backend/node_services/notification-service && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "healthcare",
    "blockchain",
    "ai",
    "cybersecurity",
    "saas",
    "hipaa",
    "gdpr",
    "federated-learning"
  ],
  "author": "Incognito Technology Team",
  "license": "MIT"
}
